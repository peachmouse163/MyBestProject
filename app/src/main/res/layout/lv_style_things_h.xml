<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_bill_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_bill_description"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/img_bill_things"
        android:gravity="center"
        android:text="¥10"
        android:textColor="#000000"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/img_bill_things"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:src="#24A6B119" />

    <TextView
        android:id="@+id/tv_bill_thingname"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/img_bill_things"
        android:text="东西things"
        android:textColor="#000000"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/tv_bill_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_bill_thingname"
        android:layout_toEndOf="@+id/img_bill_things"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="物品描述，物品描述"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ll_toAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_bill_description"
        android:layout_marginStart="40dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/tv_bill_money"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_product_jian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:src="@mipmap/buy_product_jianhao" />

        <TextView
            android:id="@+id/tv_check_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:text="0"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_product_jia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:src="@mipmap/buy_product_jiahao" />

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="0dip"
            android:layout_height="0dip" />

    </LinearLayout>


</RelativeLayout>