<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".login.Register">

    <ImageButton
        android:id="@+id/register_ibtn_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_return" />

    <LinearLayout
        android:background="@drawable/shape_corner"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="欢迎注册PickMe账号~"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/signin_et_name"
            android:gravity="center"
            android:hint="请输入用户名"
            android:background="@color/WhiteSmoke"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

        <EditText
            android:id="@+id/signin_et_password"
            android:gravity="center"
            android:hint="请输入密码"
            android:layout_marginTop="30dp"
            android:background="@color/WhiteSmoke"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:autofillHints=""
            android:inputType="numberPassword" />

        <EditText
            android:id="@+id/signin_et_password0"
            android:gravity="center"
            android:hint="请确认密码"
            android:layout_marginTop="30dp"
            android:background="@color/WhiteSmoke"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:autofillHints=""
            android:inputType="numberPassword" />


        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/signin_btn_signin"
                android:layout_marginBottom="10dp"
                android:elevation="20dp"
                android:background="@drawable/shape_button"
                android:layout_marginTop="10dp"
                android:text="注册"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/signin_btn_seller"
                android:layout_marginBottom="10dp"
                android:elevation="20dp"
                android:background="@drawable/shape_button"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="商家注册"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="100dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_register_forget"
                android:text="忘记"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:background="@color/WhiteSmoke"
                android:layout_width="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_register_help"
                android:text="帮助"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>